                android:layout_toEndOf="@+id/imgBruceBanner"
                android:layout_below="@+id/txtNameBruceBanner"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/txtPhoneNumberBruceBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgBruceBanner"
                android:layout_below="@+id/txtEmailBruceBanner"
                android:text="4444444444"
                android:textSize="18sp"
                android:layout_marginTop="15dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgBlackPanther"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/black_panther"
                android:padding="15dp"/>

            <TextView
                android:id="@+id/txtNameBlackPanther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T' Challa"
                android:layout_toEndOf="@+id/imgBlackPanther"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtEmailBlackPanther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tony@starkindustries.com"
                android:layout_toEndOf="@+id/imgBlackPanther"
                android:layout_below="@+id/txtNameBlackPanther"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/txtPhoneNumberBlackPanther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgBlackPanther"
                android:layout_below="@+id/txtEmailBlackPanther"
                android:text="5555555555"
                android:textSize="18sp"
                android:layout_marginTop="15dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgBlackWidow"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/widow"
                android:padding="15dp"/>

            <TextView
                android:id="@+id/txtNameBlackWidow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Natasha Romanova"
                android:layout_toEndOf="@+id/imgBlackWidow"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtEmailBlackWidow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tony@starkindustries.com"
                android:layout_toEndOf="@+id/imgBlackWidow"
                android:layout_below="@+id/txtNameBlackWidow"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/txtPhoneNumberBlackWidow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgBlackWidow"
                android:layout_below="@+id/txtEmailBlackWidow"
                android:text="6666666666"
                android:textSize="18sp"
                android:layout_marginTop="15dp"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>